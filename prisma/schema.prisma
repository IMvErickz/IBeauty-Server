// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  CPF         String     @id @unique @default(cuid())
  Nome        String
  email       String     @unique
  Senha       String
  telefone    String
  dateBirth   String
  agendado    Agendado[]
  agendadoId  String?
  Endereco    Endereco?  @relation(fields: [enderecoCep], references: [cep])
  enderecoCep String?
}

model Prestador {
  CNPJ     String @id @unique @default(cuid())
  Nome     String
  email    String @unique
  Senha    String
  img      String
  telefone String

  servico     Servico[]
  Endereco    Endereco? @relation(fields: [enderecoCep], references: [cep])
  enderecoCep String?
}

model Servico {
  id          String @id @unique @default(cuid())
  NomeServico String
  preco       String
  descricao   String
  img         String

  categoria     Categoria[]
  Prestador     Prestador?  @relation(fields: [prestadorCNPJ], references: [CNPJ])
  prestadorCNPJ String?
}

model Categoria {
  id            String    @id @unique @default(cuid())
  nomeCategoria String    @unique
  descricao     String
  Servico       Servico?  @relation(fields: [servicoId], references: [id])
  servicoId     String?
  Produtos      Produtos? @relation(fields: [produtosId], references: [id])
  produtosId    String?
}

model AgendaDia {
  id         String          @id @unique @default(cuid())
  dia        String
  horario    AgendaHorario[]
  Agendado   Agendado?       @relation(fields: [agendadoId], references: [id])
  agendadoId String?
}

model AgendaHorario {
  id      String @id @unique @default(cuid())
  horario String @unique

  agendaId String?

  agendado    Agendado?  @relation(fields: [agendaId], references: [id])
  AgendaDia   AgendaDia? @relation(fields: [agendaDiaId], references: [id])
  agendaDiaId String?
}

model AgendaStatus {
  id         String @id @unique @default(cuid())
  nomeStatus String @unique
  descricao  String

  Agendado   Agendado? @relation(fields: [agendadoId], references: [id])
  agendadoId String?
}

model Agendado {
  id     String         @id @unique @default(cuid())
  status AgendaStatus[]

  agenda        AgendaDia[]
  AgendaHorario AgendaHorario[]
  Cliente       Cliente?        @relation(fields: [clienteCPF], references: [CPF])
  clienteCPF    String?
}

model Produtos {
  id          String @id @unique @default(cuid())
  nomeProduto String
  preco       String
  descricao   String
  img         String

  categoria Categoria[]
}

model Endereco {
  cep    String @id @default(cuid())
  numero String

  prestador Prestador[]

  cliente Cliente[]
}
