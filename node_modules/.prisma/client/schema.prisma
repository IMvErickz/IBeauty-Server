// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cliente {
  CPF   String @id @unique @default(cuid())
  Nome  String
  email String @unique
  senha String
}

model Prestador {
  CNPJ  String @id @unique @default(cuid())
  Nome  String
  email String @unique
  Senha String

  servicos Servico[]
}

model Servico {
  id          String @id @unique @default(cuid())
  NomeServico String
  preco       Float
  descricao   String
  img         String

  servicoId String

  prestador Prestador @relation(fields: [servicoId], references: [CNPJ])

  categoria Categoria[]
}

model Categoria {
  id            String  @id @unique @default(cuid())
  nomeCategoria String  @unique
  descricao     String
  servicoId     String?

  servico Servico? @relation(fields: [servicoId], references: [id])
}

model Agenda {
  id      String   @id @unique @default(cuid())
  horario DateTime
  dia     Int

  agendaId String

  adendado Agendado @relation(fields: [agendaId], references: [id])
}

model AgendaStatus {
  id         String @id @unique @default(cuid())
  nomeStatus String @unique
  descricao  String

  statusId String

  agendado Agendado @relation(fields: [statusId], references: [id])
}

model Agendado {
  id       String @id @unique @default(cuid())
  agendaId Int

  status AgendaStatus[]

  agenda Agenda[]
}

model Produtos {
  id          String @id @unique @default(cuid())
  nomeProduto String
  preco       Float
  descricao   String
}
