// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cliente {
  CPF        String    @id @unique @default(cuid())
  Nome       String
  email      String    @unique
  senha      String
  Agendado   Agendado? @relation(fields: [agendadoId], references: [id])
  agendadoId String?
}

model Prestador {
  CNPJ  String @id @unique @default(cuid())
  Nome  String
  email String @unique
  Senha String

  servico Servico[]
}

model Servico {
  id          String @id @unique @default(cuid())
  NomeServico String
  preco       Float
  descricao   String
  img         String

  categoria     Categoria[]
  Prestador     Prestador?  @relation(fields: [prestadorCNPJ], references: [CNPJ])
  prestadorCNPJ String?
}

model Categoria {
  id            String    @id @unique @default(cuid())
  nomeCategoria String    @unique
  descricao     String
  Servico       Servico?  @relation(fields: [servicoId], references: [id])
  servicoId     String?
  Produtos      Produtos? @relation(fields: [produtosId], references: [id])
  produtosId    String?
}

model Agenda {
  id      String @id @unique @default(cuid())
  horario String @unique
  dia     String

  agendaId String?

  agendado Agendado? @relation(fields: [agendaId], references: [id])
}

model AgendaStatus {
  id         String @id @unique @default(cuid())
  nomeStatus String @unique
  descricao  String

  Agendado   Agendado? @relation(fields: [agendadoId], references: [id])
  agendadoId String?
}

model Agendado {
  id         String @id @unique @default(cuid())
  agendadoId String

  status AgendaStatus[]

  agenda Agenda[]

  cliente Cliente[]
}

model Produtos {
  id          String @id @unique @default(cuid())
  nomeProduto String
  preco       Float
  descricao   String

  categoria Categoria[]
}
